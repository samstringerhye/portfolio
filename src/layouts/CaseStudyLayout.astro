---
import BaseLayout from './BaseLayout.astro'
import CaseStudyHero from '../components/CaseStudyHero.astro'
import CaseStudyNav from '../components/CaseStudyNav.astro'

interface Props {
  title: string
  client: string
  year: number
  role: string
  agency: string
  tagline: string
  heroImage: string
  heroImageAlt?: string
  metrics?: { value: string; label: string }[]
  prevSlug?: string
  prevTitle?: string
  nextSlug?: string
  nextTitle?: string
}

const {
  title, client, year, role, agency, tagline, heroImage, heroImageAlt, metrics,
  prevSlug, prevTitle, nextSlug, nextTitle,
} = Astro.props
---

<BaseLayout title={`${title} â€” Sam Stringer-Hye`} description={tagline}>
  <CaseStudyHero
    title={title}
    client={client}
    year={year}
    role={role}
    agency={agency}
    tagline={tagline}
    heroImage={heroImage}
    heroImageAlt={heroImageAlt}
    metrics={metrics}
  />

  <article class="case-study-body">
    <slot />
  </article>

  <CaseStudyNav
    prevSlug={prevSlug}
    prevTitle={prevTitle}
    nextSlug={nextSlug}
    nextTitle={nextTitle}
  />
</BaseLayout>

<style is:global>
  .case-study-body {
    padding: var(--space-8) var(--page-padding) var(--space-12);
  }

  .case-study-body h2 {
    font-family: var(--font-serif);
    font-weight: var(--font-weight-regular);
    font-size: var(--text-6x);
    line-height: var(--line-height-normal);
    letter-spacing: var(--tracking-normal);
    margin-top: var(--space-10);
    margin-bottom: var(--space-3);
  }

  .case-study-body h3 {
    font-family: var(--font-serif);
    font-weight: var(--font-weight-regular);
    font-size: var(--text-5x);
    line-height: var(--line-height-normal);
    letter-spacing: var(--tracking-normal);
    margin-top: var(--space-6);
    margin-bottom: var(--space-2);
  }

  .case-study-body p {
    font-family: var(--font-sans);
    font-weight: var(--font-weight-semibold);
    font-size: var(--text-1x);
    line-height: var(--line-height-normal);
    letter-spacing: var(--tracking-normal);
    margin-bottom: var(--space-3);
  }

  .case-study-body img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-3x);
    margin: var(--space-4) 0;
  }

  .case-study-body ul {
    list-style: disc;
    padding-left: var(--space-3);
    margin-bottom: var(--space-3);
  }

  .case-study-body li {
    font-family: var(--font-sans);
    font-weight: var(--font-weight-semibold);
    font-size: var(--text-1x);
    line-height: var(--line-height-normal);
    letter-spacing: var(--tracking-normal);
    margin-bottom: var(--space-1);
  }
</style>
