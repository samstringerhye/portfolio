---
import BaseLayout from '../layouts/BaseLayout.astro'
import HeroSection from '../components/HeroSection.astro'
import BioSection from '../components/BioSection.astro'
import WorkCarousel from '../components/WorkCarousel.astro'
import Timeline from '../components/Timeline.astro'
import ScrollingInterests from '../components/ScrollingInterests.astro'

import homeData from '../content/home.json'
import type { HomeContent } from '../types/content'

const home: HomeContent = homeData
---

<BaseLayout>
  <HeroSection
    headline={home.hero.headline}
    tag={home.hero.headlineTag}
    role={home.hero.headlineRole}
  />
  <hr class="section-rule" />
  <BioSection
    headline={home.bio.headline}
    body={home.bio.body}
    headlineTag={home.bio.headlineTag}
    headlineRole={home.bio.headlineRole}
    bodyTag={home.bio.bodyTag}
    bodyRole={home.bio.bodyRole}
  />
  <hr class="section-rule" />
  <WorkCarousel
    headline={home.work.headline}
    headingTag={home.work.headingTag}
    headingRole={home.work.headingRole}
    cardTitleTag={home.work.cardTitleTag}
    cardTitleRole={home.work.cardTitleRole}
  />
  <hr class="section-rule" />
  <Timeline />
  <hr class="section-rule" />
  <ScrollingInterests
    interests={home.interests.items}
    textRole={home.interests.textRole}
  />
</BaseLayout>
