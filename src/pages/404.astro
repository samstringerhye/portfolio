---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="404 â€” Page Not Found" hideFooter={true}>
  <section class="not-found">
    <p class="typo-ui-nav-section" style="color: var(--color-text-secondary);">404</p>
    <h1 class="typo-prose-title-lg">Page not found</h1>
    <p class="typo-prose-body">The page you're looking for doesn't exist or has been moved.</p>
    <a href="/" class="not-found-link typo-prose-body">Back to home</a>
  </section>
</BaseLayout>

<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: calc(100vh - var(--nav-height));
    padding: var(--space-4);
    gap: var(--space-2);
  }

  .not-found-link {
    margin-top: var(--space-3);
    padding: var(--space-1) var(--space-4);
    border: var(--border-light);
    border-radius: var(--radius-2x);
    transition: box-shadow var(--transition-1x) ease, transform var(--transition-fast) ease;
  }

  .not-found-link:hover {
    transform: translateY(var(--hover-lift));
  }
</style>
