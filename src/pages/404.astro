---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="404 â€” Page Not Found" hideFooter={true}>
  <section class="not-found">
    <p class="text-label">404</p>
    <h1>Page not found</h1>
    <p>The page you're looking for doesn't exist or has been moved.</p>
    <a href="/" class="not-found-link" data-hover="spectral-button">Back to home</a>
  </section>
</BaseLayout>

<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: calc(100vh - 64px);
    padding: var(--space-xl);
    gap: var(--space-md);
  }

  .not-found h1 {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-regular);
  }

  .not-found p {
    max-width: 40ch;
  }

  .not-found-link {
    margin-top: var(--space-lg);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-regular);
    padding: var(--space-sm) var(--space-xl);
    border: var(--border-light);
    border-radius: var(--radius-md);
    transition: box-shadow 0.3s ease, transform 0.2s ease;
  }

  .not-found-link:hover {
    box-shadow: 0 2px 16px -2px rgba(0,255,255,0.5), 0 4px 28px -4px rgba(255,0,255,0.35), 0 8px 40px -8px rgba(255,255,0,0.25);
    transform: translateY(-1px);
  }
</style>
