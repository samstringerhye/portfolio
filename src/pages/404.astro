---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout title="404 â€” Page Not Found" hideFooter={true}>
  <section class="not-found">
    <p class="text-label">404</p>
    <h1>Page not found</h1>
    <p>The page you're looking for doesn't exist or has been moved.</p>
    <a href="/" class="not-found-link" data-hover="spectral-button">Back to home</a>
  </section>
</BaseLayout>

<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: calc(100vh - var(--nav-height));
    max-width: var(--container-content);
    margin: 0 auto;
    padding: var(--space-4);
    gap: var(--space-2);
  }

  .not-found p {
  }

  .not-found-link {
    margin-top: var(--space-3);
    padding: var(--space-1) var(--space-4);
    border: var(--border-light);
    border-radius: var(--radius-md);
    transition: box-shadow 0.3s ease, transform 0.2s ease;
  }

  .not-found-link:hover {
    box-shadow:
      0 2px 16px -2px var(--glow-cyan),
      0 4px 28px -4px var(--glow-magenta),
      0 8px 40px -8px var(--glow-yellow);
    transform: translateY(-1px);
  }
</style>
