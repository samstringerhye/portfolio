---
import BaseLayout from '../layouts/BaseLayout.astro'

const categories = [
  {
    title: 'Design',
    items: ['Figma', 'After Effects', 'Photoshop', 'Illustrator', 'Framer', 'ProtoPie'],
  },
  {
    title: 'Development',
    items: ['VS Code', 'React', 'Three.js / R3F', 'GSAP', 'Astro', 'TypeScript'],
  },
  {
    title: 'Collaboration',
    items: ['Zeplin', 'Miro', 'Slack', 'Notion', 'Google Workspace'],
  },
  {
    title: 'Workflow',
    items: ['Arc Browser', 'Raycast', 'GitHub', 'Vercel', 'Claude Code'],
  },
]
---

<BaseLayout title="Uses â€” Sam Stringer-Hye" description="Tools, software, and gear I use for design and development.">
  <section class="uses-page">
    <div class="uses-header">
      <p class="text-label">Tools</p>
      <h1>Uses</h1>
      <p class="uses-intro">Software, tools, and gear I rely on for design and development work.</p>
    </div>

    <div class="uses-grid">
      {categories.map(cat => (
        <div class="uses-category" data-reveal="stagger">
          <h2>{cat.title}</h2>
          <ul>
            {cat.items.map(item => <li>{item}</li>)}
          </ul>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .uses-page {
    max-width: var(--max-width-content);
    margin: 0 auto;
    padding: var(--space-3xl) var(--space-xl);
  }

  .uses-header {
    margin-bottom: var(--space-3xl);
  }

  .uses-header h1 {
    margin-top: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .uses-intro {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
  }

  .uses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: var(--space-2xl);
  }

  .uses-category h2 {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-regular);
    margin-bottom: var(--space-md);
  }

  .uses-category ul {
    list-style: none;
  }

  .uses-category li {
    font-size: var(--font-size-sm);
    color: var(--color-text-primary);
    padding: var(--space-sm) 0;
    border-bottom: var(--border-subtle);
  }
</style>
