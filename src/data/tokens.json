{
  "$schema": "./tokens.schema.json",
  "primitives": {
    "font": {
      "family": {
        "serif": "\"PP Editorial New\", serif",
        "sans": "\"PP Neue Montreal\", sans-serif",
        "mono": "\"SF Mono\", \"Fira Code\", ui-monospace, monospace"
      },
      "weight": {
        "regular": 400,
        "semibold": 600
      },
      "scale": {
        "1x": 1,
        "2x": 1.333,
        "3x": { "min": 1.5, "max": 1.777 },
        "4x": { "min": 1.75, "max": 2.369 },
        "5x": { "min": 2, "max": 3.157 },
        "6x": { "min": 2.5, "max": 4.209 },
        "7x": { "min": 3, "max": 5.61 }
      },
      "lineHeight": {
        "tight": 1.25,
        "normal": 1.5
      },
      "tracking": {
        "tighter": -0.04,
        "tight": -0.02,
        "normal": 0,
        "wide": 0.02
      }
    },
    "color": {
      "neutral": {
        "900": "#33312E",
        "700": "#4A4743",
        "500": "#6A6661",
        "100": "#D8D3CD",
        "50": "#FDFCFB"
      },
      "alpha": {
        "black8": "#00000014",
        "black30": "#0000004D"
      },
      "cmy": {
        "cyan": "#19F1F1",
        "magenta": "#F21BF2",
        "yellow": "#F6F622"
      }
    },
    "spacing": {
      "1": 0.5,
      "2": 1,
      "3": 1.5,
      "4": { "min": 1.5, "max": 2 },
      "6": { "min": 2, "max": 3 },
      "8": { "min": 2.5, "max": 4 },
      "10": { "min": 3, "max": 5 },
      "12": { "min": 3.5, "max": 6 }
    },
    "inlineSpacing": {
      "1x": "0.1em",
      "2x": "0.3em"
    },
    "radii": {
      "1x": "4px",
      "2x": "8px",
      "3x": "12px",
      "pill": "9999px"
    },
    "border": {
      "width": {
        "1": "1px",
        "2": "2px"
      }
    },
    "shadow": {
      "3": "0 8px 40px rgba(0, 0, 0, 0.12)"
    },
    "motion": {
      "duration": {
        "fast": "0.2s",
        "1x": "0.3s"
      },
      "gsapEasing": {
        "enter": "power4.out",
        "bounce": "back.out(1.4)",
        "bounceIn": "back.in(1.4)",
        "bounceMove": "back.inOut(1.4)"
      }
    },
    "breakpoint": {
      "1x": 480,
      "2x": 768,
      "3x": 1024
    },
    "zIndex": {
      "1x": 0,
      "overlay": 100,
      "modal": 200,
      "toast": 300,
      "debug": 9999
    },
    "sizing": {
      "navHeight": "4.5rem",
      "modalMaxWidth": "520px",
      "modalMaxHeight": "85vh",
      "scrollbarWidth": "8px",
      "sectionRuleMark": "0.85rem",
      "wordmark": "clamp(1.25rem, 3vw, 2rem)",
      "wordmarkMobile": "clamp(1rem, 4vw, 1.5rem)",
      "touchTarget": "44px",
      "navToggleBarWidth": "20px",
      "navToggleBarHeight": "1.5px",
      "navToggleGap": "5px"
    },
    "blur": {
      "1x": "4px"
    },
    "opacity": {
      "30": 0.3,
      "50": 0.5,
      "60": 0.6,
      "80": 0.8
    },
    "interaction": {
      "lift": "-1px"
    }
  },

  "semantic": {
    "color": {
      "text": {
        "primary": { "$ref": "primitives.color.neutral.900" },
        "secondary": { "$ref": "primitives.color.neutral.500" }
      },
      "bg": {
        "primary": { "$ref": "primitives.color.neutral.50" },
        "alt": { "$ref": "primitives.color.neutral.100" }
      },
      "accent": { "$ref": "primitives.color.neutral.700" },
      "cmy": {
        "cyan": { "$ref": "primitives.color.cmy.cyan" },
        "magenta": { "$ref": "primitives.color.cmy.magenta" },
        "yellow": { "$ref": "primitives.color.cmy.yellow" }
      },
      "border": { "$ref": "primitives.color.alpha.black8" },
      "backdrop": { "$ref": "primitives.color.alpha.black30" }
    },
    "focus": {
      "ring": {
        "width": { "$ref": "primitives.border.width.2" },
        "color": { "$ref": "primitives.color.neutral.900" },
        "offset": { "$ref": "primitives.border.width.2" }
      }
    },
    "layer": {
      "base": { "$ref": "primitives.zIndex.1x" },
      "nav": { "$ref": "primitives.zIndex.overlay" },
      "modal": { "$ref": "primitives.zIndex.modal" },
      "skipLink": { "$ref": "primitives.zIndex.toast" },
      "debug": { "$ref": "primitives.zIndex.debug" }
    },
    "layout": {
      "pageMargin": { "$ref": "primitives.spacing.4" },
      "contentInset": { "$ref": "primitives.spacing.4" },
      "gridGutter": { "$ref": "primitives.spacing.4" },
      "sectionPadding": { "$ref": "primitives.spacing.4" },
      "navHeight": { "$ref": "primitives.sizing.navHeight" }
    },
    "modal": {
      "maxWidth": { "$ref": "primitives.sizing.modalMaxWidth" },
      "maxHeight": { "$ref": "primitives.sizing.modalMaxHeight" },
      "backdropBlur": { "$ref": "primitives.blur.1x" },
      "shadow": { "$ref": "primitives.shadow.3" }
    },
    "scrollbar": {
      "width": { "$ref": "primitives.sizing.scrollbarWidth" }
    },
    "motion": {
      "duration": {
        "instant": { "$ref": "primitives.motion.duration.fast" },
        "default": { "$ref": "primitives.motion.duration.1x" },
        "quick": 0.25
      },
      "gsapEasing": {
        "enter": { "$ref": "primitives.motion.gsapEasing.enter" },
        "bounce": { "$ref": "primitives.motion.gsapEasing.bounce" },
        "bounceIn": { "$ref": "primitives.motion.gsapEasing.bounceIn" },
        "bounceMove": { "$ref": "primitives.motion.gsapEasing.bounceMove" }
      }
    }
  },

  "roles": {
    "prose-title-lg": {
      "family":     { "$ref": "primitives.font.family.serif" },
      "weight":     { "$ref": "primitives.font.weight.regular" },
      "scale":      { "$ref": "primitives.font.scale.7x" },
      "lineHeight": { "$ref": "primitives.font.lineHeight.tight" },
      "tracking":   { "$ref": "primitives.font.tracking.normal" }
    },
    "prose-heading-lg": {
      "family":     { "$ref": "primitives.font.family.serif" },
      "weight":     { "$ref": "primitives.font.weight.regular" },
      "scale":      { "$ref": "primitives.font.scale.5x" },
      "lineHeight": { "$ref": "primitives.font.lineHeight.tight" },
      "tracking":   { "$ref": "primitives.font.tracking.tight" }
    },
    "prose-subhead-lg": {
      "family":     { "$ref": "primitives.font.family.sans" },
      "weight":     { "$ref": "primitives.font.weight.semibold" },
      "scale":      { "$ref": "primitives.font.scale.3x" },
      "lineHeight": { "$ref": "primitives.font.lineHeight.normal" },
      "tracking":   { "$ref": "primitives.font.tracking.normal" }
    },
    "prose-title-sm": {
      "family":     { "$ref": "primitives.font.family.serif" },
      "weight":     { "$ref": "primitives.font.weight.regular" },
      "scale":      { "$ref": "primitives.font.scale.4x" },
      "lineHeight": { "$ref": "primitives.font.lineHeight.tight" },
      "tracking":   { "$ref": "primitives.font.tracking.tight" }
    },
    "prose-heading-sm": {
      "family":     { "$ref": "primitives.font.family.serif" },
      "weight":     { "$ref": "primitives.font.weight.regular" },
      "scale":      { "$ref": "primitives.font.scale.3x" },
      "lineHeight": { "$ref": "primitives.font.lineHeight.normal" },
      "tracking":   { "$ref": "primitives.font.tracking.normal" }
    },
    "prose-body": {
      "family":     { "$ref": "primitives.font.family.sans" },
      "weight":     { "$ref": "primitives.font.weight.semibold" },
      "scale":      { "$ref": "primitives.font.scale.1x" },
      "lineHeight": { "$ref": "primitives.font.lineHeight.normal" },
      "tracking":   { "$ref": "primitives.font.tracking.normal" }
    },
    "ui-nav-item-lg": {
      "family":     { "$ref": "primitives.font.family.sans" },
      "weight":     { "$ref": "primitives.font.weight.semibold" },
      "scale":      { "$ref": "primitives.font.scale.1x" },
      "lineHeight": { "$ref": "primitives.font.lineHeight.normal" },
      "tracking":   { "$ref": "primitives.font.tracking.normal" }
    },
    "ui-nav-section": {
      "family":     { "$ref": "primitives.font.family.sans" },
      "weight":     { "$ref": "primitives.font.weight.semibold" },
      "scale":      { "$ref": "primitives.font.scale.1x" },
      "lineHeight": { "$ref": "primitives.font.lineHeight.normal" },
      "tracking":   { "$ref": "primitives.font.tracking.wide" }
    }
  },

  "hover": {
    "lift": { "$ref": "primitives.interaction.lift" },
    "underlineHeight": { "$ref": "primitives.border.width.1" },
    "underlineHoverHeight": { "$ref": "primitives.border.width.2" },
    "underlineOpacity": { "$ref": "primitives.opacity.30" },
    "underlineHoverOpacity": { "$ref": "primitives.opacity.80" }
  },

  "prose": {
    "code": {
      "bg": { "$ref": "primitives.color.neutral.100" },
      "paddingInline": { "$ref": "primitives.inlineSpacing.2x" },
      "paddingBlock": { "$ref": "primitives.inlineSpacing.1x" },
      "borderRadius": { "$ref": "primitives.radii.1x" },
      "blockPadding": { "$ref": "primitives.spacing.2" },
      "blockRadius": { "$ref": "primitives.radii.2x" }
    }
  }
}
