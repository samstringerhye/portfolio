{
  "fonts": {
    "serif": "\"PP Editorial New\", serif",
    "sans-serif": "\"PP Neue Montreal\", sans-serif"
  },
  "fontWeight": {
    "serif": 400,
    "sans-serif": 300
  },

  "roles": {
    "display":  { "font": "serif",      "scale": "5xl",   "lineHeight": "normal",   "tracking": "normal" },
    "headline": { "font": "serif",      "scale": "4xl",   "lineHeight": "normal",   "tracking": "normal" },
    "title":    { "font": "serif",      "scale": "3xl",   "lineHeight": "normal",   "tracking": "normal" },
    "subtitle": { "font": "serif",      "scale": "2xl",   "lineHeight": "normal",   "tracking": "normal" },
    "lead":     { "font": "sans-serif", "scale": "xl",    "lineHeight": "normal",   "tracking": "normal" },
    "body":     { "font": "sans-serif", "scale": "base",  "lineHeight": "normal",     "tracking": "normal" },
    "label":    { "font": "sans-serif", "scale": "lg",  "lineHeight": "tight",     "tracking": "normal" },
    "caption":  { "font": "sans-serif", "scale": "xs",    "lineHeight": "tight",     "tracking": "normal" }
  },

  "scale": {
    "5xl": { "min": 2.35, "max": 4.71 },
    "4xl": { "min": 2.12, "max": 3.76 },
    "3xl": { "min": 1.88, "max": 3.06 },
    "2xl": { "min": 1.65, "max": 2.47 },
    "xl":  { "min": 1.41, "max": 1.94 },
    "lg":  { "min": 1.24, "max": 1.59 },
    "md":  { "min": 1.12, "max": 1.24 },
    "base": 1,
    "sm":  0.8235,
    "xs":  0.7059
  },

  "lineHeight": {
    "tight": 1.25,
    "normal": 1.5,
    "loose": 2
  },

  "tracking": {
    "tight": -0.02,
    "normal": 0,
    "wide": 0.02
  },

  "colors": {
    "textPrimary": "#1D1D1F",
    "textSecondary": "#636366",
    "bgPrimary": "#FFFFFF",
    "bgAlt": "#F5F5F7",
    "accent": "#0066CC",
    "border": "rgba(0, 0, 0, 0.08)",
    "dotInactive": "rgba(0, 0, 0, 0.25)",
    "backdrop": "rgba(0, 0, 0, 0.3)",
    "shadow": "rgba(0, 0, 0, 0.12)"
  },

  "spacing": {
    "1": "0.5rem",
    "2": "1rem",
    "3": "1.5rem",
    "4": "2rem",
    "6": "3rem",
    "8": "4rem",
    "10": "5rem",
    "12": "6rem"
  },

  "layout": {
    "contentWidth": 1260,
    "pagePadding": "clamp(1.5rem, 6.25vw, 120px)",
    "gridGutter": "clamp(0.94rem, 0.81rem + 6.01vw, 4.71rem)",
    "sectionPadding": "clamp(5.65rem, 5.51rem + 6.01vw, 9.41rem)",
    "navHeight": "4rem"
  },

  "breakpoints": {
    "mobile": 768
  },

  "radii": {
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "pill": "9999px"
  },

  "zIndex": {
    "nav": 100,
    "modal": 200,
    "skipLink": 300
  },

  "transitions": {
    "fast": "0.2s",
    "base": "0.3s",
    "slow": "0.5s"
  },

  "modal": {
    "maxWidth": "520px",
    "maxHeight": "85vh",
    "backdropBlur": "4px",
    "shadow": "0 8px 40px rgba(0, 0, 0, 0.12)"
  },

  "scrollbar": {
    "width": "8px"
  },

  "glow": {
    "cyan": "rgba(0, 255, 255, 0.5)",
    "magenta": "rgba(255, 0, 255, 0.35)",
    "yellow": "rgba(255, 255, 0, 0.25)"
  },

  "hover": {
    "lift": "-1px",
    "perspective": 800,
    "tiltDeg": 6,
    "underlineHeight": "1px",
    "underlineHoverHeight": "2px",
    "underlineOpacity": 0.3,
    "underlineHoverOpacity": 0.8
  },

  "animations": {
    "hero": {
      "canvas": {
        "arrangement": "spiral",
        "numRays": 80,
        "dotsPerRay": 30,
        "spacing": 1,
        "innerRadius": 1,
        "dotRadius": 0.25,
        "dotSegments": 6,
        "dotColor": "#1D1D1F",
        "bgColor": "#FDFDFD",
        "sizeStart": 0.1,
        "sizeMid": 1.0,
        "sizeEnd": 0.1,
        "wavePaused": false,
        "waveSpeed": 1.0,
        "waveFrequency": 0.1,
        "waveAmplitude": 0.5,
        "waveSharpness": 0.25,
        "propagation": 30,
        "baseScale": 1.25,
        "twistAmount": 0.5,
        "rgbDelay": 2,
        "rgbSplitMode": "cmy",
        "zoom": 20,
        "maxDpr": 2
      },
      "text": {
        "duration": 2,
        "stagger": 0.2,
        "y": 40,
        "blur": 6,
        "aberration": 40,
        "aberrationOpacity": 0.75,
        "delay": 0.5,
        "ease": "power4.out"
      }
    },
    "bio": {
      "duration": 1.2,
      "stagger": 0.12,
      "y": 30,
      "blur": 14,
      "aberration": 30,
      "aberrationOpacity": 0.5,
      "triggerStart": "top 60%",
      "ease": "power3.out"
    },
    "scrollReveal": {
      "duration": 0.9,
      "y": 30,
      "blur": 6,
      "aberration": 12,
      "aberrationOpacity": 0.45,
      "triggerStart": "top 65%",
      "ease": "power3.out"
    },
    "carousel": {
      "cardGap": 24,
      "cardRadius": 28,
      "entrance": {
        "duration": 1,
        "stagger": 0.1,
        "blur": 10,
        "x": 120,
        "triggerStart": "top 70%",
        "ease": "power4.out"
      },
      "snap": {
        "ease": "power3.out",
        "momentumFactor": 12,
        "wheelThreshold": 60
      }
    },
    "interests": {
      "scrollDuration": 60
    },
    "smoothScroll": {
      "lerp": 0.25,
      "wheelMultiplier": 1.4
    }
  }
}
