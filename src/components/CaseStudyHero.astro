---
interface Props {
  title: string
  client: string
  year: number
  role: string
  agency: string
  tagline: string
  heroImage: string
  metrics?: { value: string; label: string }[]
}

const { title, client, year, role, agency, tagline, heroImage, metrics } = Astro.props
---

<header class="cs-hero" data-reveal="fade-up">
  <div class="cs-hero-image">
    <img src={heroImage} alt={title} transition:name={`hero-${title.toLowerCase().replace(/\s+/g, '-')}`} />
  </div>

  <div class="cs-hero-content">
    <h1 class="cs-hero-title" transition:name={`title-${title.toLowerCase().replace(/\s+/g, '-')}`}>
      {title}
    </h1>
    <p class="cs-hero-tagline">{tagline}</p>

    <dl class="cs-hero-meta">
      <div class="cs-meta-item">
        <dt class="cs-meta-label text-label">Client</dt>
        <dd class="cs-meta-value">{client}</dd>
      </div>
      <div class="cs-meta-item">
        <dt class="cs-meta-label text-label">Role</dt>
        <dd class="cs-meta-value">{role}</dd>
      </div>
      <div class="cs-meta-item">
        <dt class="cs-meta-label text-label">Agency</dt>
        <dd class="cs-meta-value">{agency}</dd>
      </div>
      <div class="cs-meta-item">
        <dt class="cs-meta-label text-label">Year</dt>
        <dd class="cs-meta-value">{year}</dd>
      </div>
    </dl>

    {metrics && metrics.length > 0 && (
      <dl class="cs-hero-metrics">
        {metrics.map(m => (
          <div class="cs-metric">
            <dd class="cs-metric-value">{m.value}</dd>
            <dt class="cs-metric-label text-label">{m.label}</dt>
          </div>
        ))}
      </dl>
    )}
  </div>
</header>

<style>
  .cs-hero {
    max-width: var(--container-content);
    margin: 0 auto;
    padding: var(--space-6) var(--page-padding) 0;
  }

  .cs-hero-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin-bottom: var(--space-6);
  }

  .cs-hero-image img {
    width: 100%;
    display: block;
    aspect-ratio: 16/9;
  }

  .cs-hero-content {
    max-width: var(--container-content);
    margin: 0 auto;
  }

  .cs-hero-title {
    margin-bottom: var(--space-2);
  }

  .cs-hero-tagline {
    line-height: var(--line-height-body);
    margin-bottom: var(--space-6);
  }

  .cs-hero-meta {
    display: flex;
    gap: var(--space-6);
    flex-wrap: wrap;
    padding: var(--space-3) 0;
    border-top: var(--border-light);
    border-bottom: var(--border-light);
    margin-bottom: var(--space-6);
  }

  .cs-meta-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .cs-meta-value {
    margin: 0;
  }

  .cs-hero-metrics {
    display: flex;
    gap: var(--space-8);
    flex-wrap: wrap;
  }

  .cs-metric {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .cs-metric-value {
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    max-width: none;
  }
</style>
