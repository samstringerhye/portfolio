---
interface Props {
  title: string
  client: string
  year: number
  role: string
  agency: string
  tagline: string
  heroImage: string
  heroImageAlt?: string
  metrics?: { value: string; label: string }[]
}

const { title, client, year, role, agency, tagline, heroImage, heroImageAlt, metrics } = Astro.props
---

<header class="cs-hero" data-reveal="fade-up">
  <div class="cs-hero-image">
    <img src={heroImage} alt={heroImageAlt || `${title} â€” project showcase`} width="1260" height="709" transition:name={`hero-${title.toLowerCase().replace(/\s+/g, '-')}`} />
  </div>

  <div class="cs-hero-content">
    <h1 class="cs-hero-title typo-prose-title-lg" transition:name={`title-${title.toLowerCase().replace(/\s+/g, '-')}`}>
      {title}
    </h1>
    <p class="cs-hero-tagline typo-prose-subhead-lg">{tagline}</p>

    <dl class="cs-hero-meta">
      <div class="cs-meta-item">
        <dt class="cs-meta-label typo-ui-nav-section">Client</dt>
        <dd class="cs-meta-value typo-prose-body">{client}</dd>
      </div>
      <div class="cs-meta-item">
        <dt class="cs-meta-label typo-ui-nav-section">Role</dt>
        <dd class="cs-meta-value typo-prose-body">{role}</dd>
      </div>
      <div class="cs-meta-item">
        <dt class="cs-meta-label typo-ui-nav-section">Agency</dt>
        <dd class="cs-meta-value typo-prose-body">{agency}</dd>
      </div>
      <div class="cs-meta-item">
        <dt class="cs-meta-label typo-ui-nav-section">Year</dt>
        <dd class="cs-meta-value typo-prose-body">{year}</dd>
      </div>
    </dl>

    {metrics && metrics.length > 0 && (
      <dl class="cs-hero-metrics">
        {metrics.map(m => (
          <div class="cs-metric">
            <dt class="cs-metric-label typo-ui-nav-section">{m.label}</dt>
            <dd class="cs-metric-value typo-prose-title-lg">{m.value}</dd>
          </div>
        ))}
      </dl>
    )}
  </div>
</header>

<style>
  .cs-hero {
    padding: var(--space-6) var(--page-padding) 0;
  }

  .cs-hero-image {
    border-radius: var(--radius-3x);
    overflow: hidden;
    margin-bottom: var(--space-6);
  }

  .cs-hero-image img {
    width: 100%;
    display: block;
    aspect-ratio: 16/9;
  }

  .cs-hero-content {
  }

  .cs-hero-title {
    margin-bottom: var(--space-2);
  }

  .cs-hero-tagline {
    margin-bottom: var(--space-6);
  }

  .cs-hero-meta {
    display: flex;
    gap: var(--space-6);
    flex-wrap: wrap;
    padding: var(--space-3) 0;
    border-top: var(--border-light);
    border-bottom: var(--border-light);
    margin-bottom: var(--space-6);
  }

  .cs-meta-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .cs-meta-value {
    margin: 0;
  }

  .cs-hero-metrics {
    display: flex;
    gap: var(--space-8);
    flex-wrap: wrap;
  }

  .cs-metric {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .cs-metric-label {
    order: 2;
  }

  .cs-metric-value {
    order: 1;
    color: var(--color-text-primary);
    max-width: none;
  }
</style>
