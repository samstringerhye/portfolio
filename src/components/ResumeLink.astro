---
interface Props {
  heading: string
  cta: string
}

const { heading, cta } = Astro.props
---

<section class="resume-section" aria-label="Resume" data-reveal="fade-up">
  <div class="resume-inner">
    <h2 class="resume-heading typo-subtitle">{heading}</h2>
    <!-- TODO: Add resume PDF to /assets/resume.pdf -->
    <a href="/assets/resume.pdf" download class="resume-cta typo-body" data-hover="spectral-button">
      {cta}
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
        <path d="M8 2v9m0 0l-3-3m3 3l3-3M3 13h10" />
      </svg>
    </a>
  </div>
</section>

<style>
  .resume-section {
    padding: var(--space-8) var(--page-padding);
  }

  .resume-inner {
    max-width: var(--container-content);
    margin: 0 auto;
    text-align: center;
  }

  .resume-heading {
    margin-bottom: var(--space-4);
  }

  .resume-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-1) var(--space-4);
    border: var(--border-light);
    border-radius: var(--radius-md);
    background: var(--color-bg-primary);
    transition: box-shadow var(--transition-base) ease, transform var(--transition-fast) ease;
  }

  .resume-cta:hover {
    box-shadow:
      0 2px 16px -2px var(--glow-cyan),
      0 4px 28px -4px var(--glow-magenta),
      0 8px 40px -8px var(--glow-yellow);
    transform: translateY(-1px);
  }
</style>
