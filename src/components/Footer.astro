---
const year = new Date().getFullYear()
---

<footer class="footer">
  <div class="footer-inner">
    <address class="footer-left">
      <p class="footer-name">Sam Stringer-Hye</p>
      <p class="footer-role">Associate Design Director</p>
    </address>

    <nav class="footer-links" aria-label="Footer links">
      <a href="mailto:sam@samstringerhye.com" class="footer-link">Email</a>
      <a href="https://linkedin.com/in/samstringerhye" target="_blank" rel="noopener noreferrer" class="footer-link">LinkedIn<span class="visually-hidden"> (opens in new tab)</span></a>
    </nav>

    <div class="footer-right">
      <p class="footer-copyright">&copy; {year} Sam Stringer-Hye</p>
      <a href="/colophon" class="footer-colophon">Colophon</a>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: var(--border-light);
    padding: var(--space-8) 0;
    margin-top: var(--section-padding);
  }

  .footer-inner {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    max-width: var(--container-content);
    margin: 0 auto;
    padding: 0 var(--page-padding);
    gap: var(--space-6);
  }

  .footer-left {
    font-style: normal;
  }

  .footer-name {
    margin-bottom: var(--space-1);
  }

  .footer-links {
    display: flex;
    gap: var(--space-3);
  }

  .footer-right {
    text-align: right;
  }

  .footer-copyright {
    margin-bottom: var(--space-1);
  }

  @media (max-width: 768px) {
    .footer-inner {
      flex-direction: column;
      gap: var(--space-4);
    }

    .footer-right {
      text-align: left;
    }
  }
</style>
