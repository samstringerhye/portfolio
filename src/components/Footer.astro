---
const year = new Date().getFullYear()
---

<footer class="footer">
  <div class="footer-inner">
    <div class="footer-left">
      <p class="footer-name">Sam Stringer-Hye</p>
      <p class="footer-role">Associate Design Director</p>
    </div>

    <div class="footer-links">
      <a href="mailto:sam@samstringerhye.com" class="footer-link">Email</a>
      <a href="https://linkedin.com/in/samstringerhye" target="_blank" rel="noopener noreferrer" class="footer-link">LinkedIn</a>
    </div>

    <div class="footer-right">
      <p class="footer-copyright">&copy; {year} Sam Stringer-Hye</p>
      <a href="/colophon" class="footer-colophon">Colophon</a>
    </div>
  </div>
</footer>

<style>
  .footer {
    border-top: var(--border-light);
    padding: var(--space-3xl) 0;
    margin-top: var(--space-5xl);
  }

  .footer-inner {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-xl);
    gap: var(--space-2xl);
  }

  .footer-name {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-regular);
    margin-bottom: var(--space-xs);
  }

  .footer-role {
    font-size: var(--font-size-sm);
  }

  .footer-links {
    display: flex;
    gap: var(--space-lg);
  }

  .footer-link {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-regular);
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .footer-right {
    text-align: right;
  }

  .footer-copyright {
    font-size: var(--font-size-sm);
    margin-bottom: var(--space-xs);
  }

  .footer-colophon {
    font-size: var(--font-size-sm);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .footer-inner {
      flex-direction: column;
      gap: var(--space-xl);
    }

    .footer-right {
      text-align: left;
    }
  }
</style>
