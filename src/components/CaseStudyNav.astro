---
interface Props {
  prevSlug?: string
  prevTitle?: string
  nextSlug?: string
  nextTitle?: string
}

const { prevSlug, prevTitle, nextSlug, nextTitle } = Astro.props
---

{(prevSlug || nextSlug) && (
  <nav class="cs-nav" aria-label="Case study navigation">
    <div class="cs-nav-inner">
      {prevSlug ? (
        <a href={`/work/${prevSlug}`} class="cs-nav-link cs-nav-prev" data-hover="spectral-link">
          <span class="cs-nav-label typo-caption">Previous</span>
          <span class="cs-nav-title typo-body">{prevTitle}</span>
        </a>
      ) : <div />}

      {nextSlug ? (
        <a href={`/work/${nextSlug}`} class="cs-nav-link cs-nav-next" data-hover="spectral-link">
          <span class="cs-nav-label typo-caption">Next</span>
          <span class="cs-nav-title typo-body">{nextTitle}</span>
        </a>
      ) : <div />}
    </div>
  </nav>
)}

<style>
  .cs-nav {
    border-top: var(--border-light);
    padding: var(--space-8) var(--page-padding);
  }

  .cs-nav-inner {
    display: flex;
    justify-content: space-between;
    max-width: var(--container-content);
    margin: 0 auto;
  }

  .cs-nav-link {
    text-decoration: none;
    transition: color var(--transition-fast) ease;
  }

  .cs-nav-next {
    text-align: right;
  }

  .cs-nav-label {
    display: block;
    margin-bottom: var(--space-1);
  }

  .cs-nav-link:hover .cs-nav-title {
    color: var(--color-text-primary);
  }
</style>
