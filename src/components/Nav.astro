---
const pathname = Astro.url.pathname

const links = [
  { href: '/', label: 'Home' },
  { href: '/#selected-work', label: 'Work' },
]

function isActive(href: string) {
  if (href === '/') return pathname === '/'
  if (href.startsWith('/#')) return false
  return pathname.startsWith(href)
}
---

<header class="nav" id="site-nav">
  <nav class="nav-inner" aria-label="Main navigation">
    <a href="/" class="nav-logo typo-ui-nav-item-lg" aria-label="Sam Stringer-Hye â€” Home">
      Sam Stringer-Hye
    </a>

    <ul class="nav-links" id="nav-links" role="list">
      {links.map(link => (
        <li>
          <a
            href={link.href}
            class:list={['nav-link', 'typo-ui-nav-item-lg', { active: isActive(link.href) }]}
            aria-current={isActive(link.href) ? 'page' : undefined}
            data-astro-prefetch="hover"
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <button class="nav-link typo-ui-nav-item-lg" data-about-trigger aria-haspopup="dialog">
          About
        </button>
      </li>
    </ul>

    <button
      class="nav-toggle"
      id="nav-toggle"
      aria-label="Toggle navigation"
      aria-expanded="false"
      aria-controls="nav-links"
    >
      <span class="nav-toggle-bar"></span>
      <span class="nav-toggle-bar"></span>
    </button>
  </nav>
</header>

<style>
  .nav {
    position: relative;
    z-index: var(--z-nav);
    background: var(--color-bg-primary);
    border-bottom: var(--border-width-1) solid var(--color-accent);
  }

  .nav-inner {
    display: flex;
    align-items: stretch;
    height: var(--nav-height);
    margin-inline: var(--page-margin);
  }

  .nav-logo {
    display: flex;
    align-items: center;
    padding-inline: var(--content-inset);
    border-right: var(--border-width-1) solid var(--color-text-primary);
    color: var(--color-text-primary);
    text-decoration: none;
    white-space: nowrap;
    transition: background-color 250ms ease;
  }

  .nav-links {
    display: flex;
    align-items: stretch;
    list-style: none;
    flex-shrink: 0;
    margin-left: auto;
  }

  .nav-links li {
    display: flex;
    border-left: var(--border-width-1) solid var(--color-text-primary);
  }

  .nav-link {
    display: flex;
    align-items: center;
    padding-inline: var(--content-inset);
    color: var(--color-text-primary);
    text-decoration: none;
    position: relative;
    background: none;
    border: none;
    cursor: pointer;
    transition: background-color 250ms ease;
  }

  .nav-link.active {
    color: var(--color-accent);
  }


  .nav-toggle {
    display: none;
    flex-direction: column;
    gap: var(--nav-toggle-gap);
    min-width: var(--touch-target);
    min-height: var(--touch-target);
    align-items: center;
    justify-content: center;
    padding: var(--space-1);
    background: none;
    border: none;
    cursor: pointer;
  }

  .nav-toggle-bar {
    display: block;
    width: var(--nav-toggle-bar-width);
    height: var(--nav-toggle-bar-height);
    background: var(--color-text-primary);
    border-radius: var(--radius-1x);
    transition: transform var(--transition-1x) ease, opacity var(--transition-1x) ease;
  }

  @media (--2x) {
    .nav {
      position: sticky;
      top: 0;
    }

    .nav-toggle {
      display: flex;
      border-left: var(--border-width-1) solid var(--color-text-primary);
    }

    .nav-links {
      position: fixed;
      top: var(--nav-height);
      left: 0;
      right: 0;
      bottom: 0;
      flex-direction: column;
      align-items: stretch;
      padding: var(--space-6) var(--space-4);
      background: var(--color-bg-primary);
      transform: translateX(100%);
      transition: transform var(--transition-1x) ease;
    }

    .nav-links li {
      border-left: none;
      border-bottom: var(--border-width-1) solid var(--color-text-primary);
    }

    .nav-links.open {
      transform: translateX(0);
    }

    .nav-link {
      padding: var(--space-2) 0;
    }

    .nav-toggle[aria-expanded="true"] .nav-toggle-bar:first-child {
      transform: translateY(calc((var(--nav-toggle-gap) + var(--nav-toggle-bar-height)) / 2)) rotate(45deg);
    }

    .nav-toggle[aria-expanded="true"] .nav-toggle-bar:last-child {
      transform: translateY(calc((var(--nav-toggle-gap) + var(--nav-toggle-bar-height)) / -2)) rotate(-45deg);
    }
  }
</style>

<script>
  import { cmyRgba } from '../data/tokens'

  const CMY_COLORS = cmyRgba(1)
  let colorIndex = 0

  function initNavHover() {
    const items = document.querySelectorAll<HTMLElement>('.nav-link, .nav-logo')
    items.forEach((el) => {
      if (el.dataset.navHoverBound === 'true') return
      el.dataset.navHoverBound = 'true'
      el.addEventListener('mouseenter', () => {
        el.style.backgroundColor = CMY_COLORS[colorIndex++ % CMY_COLORS.length]
      })
      el.addEventListener('mouseleave', () => {
        el.style.backgroundColor = ''
      })
    })
  }

  initNavHover()
  document.addEventListener('astro:after-swap', initNavHover)

  type NavWindow = Window & {
    __navAfterSwapHandler?: () => void
  }

  function initNav() {
    const toggle = document.getElementById('nav-toggle')
    const links = document.getElementById('nav-links')
    if (!toggle || !links) return
    if (toggle.dataset.navBound === 'true') return

    toggle.dataset.navBound = 'true'

    let removeTrap: (() => void) | null = null

    function openNav() {
      toggle!.setAttribute('aria-expanded', 'true')
      links!.classList.add('open')

      // Focus trap for mobile nav
      const focusable = links!.querySelectorAll<HTMLElement>('a, button, [tabindex]:not([tabindex="-1"])')
      const first = focusable[0]
      const last = focusable[focusable.length - 1]

      function handler(e: KeyboardEvent) {
        if (e.key === 'Escape') { closeNav(); return }
        if (e.key !== 'Tab') return
        if (e.shiftKey && document.activeElement === first) { e.preventDefault(); last?.focus() }
        else if (!e.shiftKey && document.activeElement === last) { e.preventDefault(); first?.focus() }
      }

      links!.addEventListener('keydown', handler)
      first?.focus()
      removeTrap = () => links!.removeEventListener('keydown', handler)
    }

    function closeNav() {
      toggle!.setAttribute('aria-expanded', 'false')
      links!.classList.remove('open')
      removeTrap?.()
      removeTrap = null
      toggle!.focus()
    }

    toggle.addEventListener('click', () => {
      const expanded = toggle.getAttribute('aria-expanded') === 'true'
      if (expanded) closeNav()
      else openNav()
    })

    // Close on nav link click (mobile)
    links.querySelectorAll('a').forEach(link => {
      if ((link as HTMLElement).dataset.navCloseBound === 'true') return
      ;(link as HTMLElement).dataset.navCloseBound = 'true'
      link.addEventListener('click', closeNav)
    })
  }

  const navWindow = window as NavWindow
  if (navWindow.__navAfterSwapHandler) {
    document.removeEventListener('astro:after-swap', navWindow.__navAfterSwapHandler)
  }
  navWindow.__navAfterSwapHandler = initNav

  initNav()
  document.addEventListener('astro:after-swap', navWindow.__navAfterSwapHandler)
</script>
