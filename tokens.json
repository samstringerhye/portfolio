{
  "typography": {
    "fontFamily": {
      "primary": "Inter",
      "fallback": "system-ui, -apple-system, sans-serif"
    },
    "fontWeight": {
      "light": 300,
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem",
      "7xl": "4.5rem"
    },
    "lineHeight": {
      "tight": 1,
      "snug": 1.25,
      "normal": 1.5,
      "relaxed": 2
    },
    "letterSpacing": {
      "tight": "-0.02em",
      "normal": "0",
      "wide": "0.05em",
      "widest": "0.1em"
    },
    "rules": {
      "minWeightAtSmallSize": "400 minimum at sizes below 18px",
      "weight300": "Reserved for 18px+ display text only"
    }
  },

  "colors": {
    "neutral": {
      "background": "#FAFAF9",
      "surface": "#F5F5F4",
      "border": "#E7E5E4",
      "textPrimary": "#1A1A1A",
      "textSecondary": "#57534E",
      "textMuted": "#A8A29E"
    },
    "prismatic": {
      "rose": "#FB7185",
      "amber": "#FBBF24",
      "emerald": "#34D399",
      "cyan": "#22D3EE",
      "blue": "#60A5FA",
      "violet": "#A78BFA",
      "fuchsia": "#E879F9"
    },
    "focus": {
      "ring": "#1A1A1A",
      "ringWidth": "2px",
      "ringOffset": "3px"
    }
  },

  "animation": {
    "easing": {
      "pageTransition": "power4.inOut",
      "scrollReveal": "power3.out",
      "hover": "power2.out",
      "heroEntrance": "power4.out",
      "carouselSnap": "power3.out"
    },
    "duration": {
      "scrollReveal": 0.8,
      "scrollRevealStagger": 0.1,
      "hover": 0.35,
      "pageExit": 0.6,
      "pageEnter": 0.6,
      "carouselSnap": 0.6,
      "heroEntrance": 1.6,
      "heroStagger": 0.15,
      "reducedMotion": 0.3
    },
    "distance": {
      "scrollRevealY": 40
    }
  },

  "layout": {
    "maxWidth": "1600px",
    "carouselCardWidth": "75vw",
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem",
      "5xl": "8rem"
    }
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  }
}
